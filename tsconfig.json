{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "include": [
    "tennyson/**/*.ts",
    "tennyson/**/*.tsx",
    "./tsconfig.json",
  ],
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "outDir": "build",
    "allowUnusedLabels": false,
    "jsx": "react-jsx",
    "paths": {
      "tennyson/*": ["tennyson/*"]
    }
  }
}
