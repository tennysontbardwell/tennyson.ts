{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "include": [
    "tennyson/**/*.ts",
    "tennyson/**/*.tsx",
  ],
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "baseUrl": ".",
    "composite": true,
    "tsBuildInfoFile": "./build/.tsbuildinfo",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "outDir": "build",
    "allowUnusedLabels": false,
    "jsx": "react-jsx",
    "paths": {
      "tennyson/*": ["tennyson/*"]
    }
  }
}
